{
  "name": "@p1n2o/utils",
  "description": "A collection of utility functions for common JavaScript/TypeScript tasks",
  "version": "0.1.3",
  "author": {
    "name": "Manuel Pinto",
    "email": "manuel@pinto.dev"
  },
  "tasks": {
    "start": "deno run --watch -A playground.ts",
    "format": "deno fmt",
    "lint": "deno lint",
    "publish": "deno run --allow-read --allow-run scripts/publish.ts"
  },
  "imports": {
    "@commitlint/cli": "npm:@commitlint/cli",
    "@commitlint/config-conventional": "npm:@commitlint/config-conventional",
    "@commitlint/types": "npm:@commitlint/types",
    "@p1n2o/utils": "./mod.ts",
    "lefthook": "npm:lefthook"
  },
  "exports": {
    ".": "./mod.ts",
    "./user-agent": "./lib/user-agent/main.ts"
  },
  "publish": {
    "exclude": [
      "node_modules",
      ".git",
      ".github",
      ".cache",
      ".vscode",
      "scripts",
      "playground.ts"
    ]
  },
  "compilerOptions": {
    "strict": true
  },
  "nodeModulesDir": "auto"
}
